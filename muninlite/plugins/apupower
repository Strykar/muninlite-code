config_apupower() {
  echo "graph_title PwrCPUave: CPU average power"
  echo "graph_args --base 1000 --vertical-label uWatts"
  echo "graph_category sensors"
  echo "cpu_avg_power.label CPU average power"
  echo "cpu_avg_power.draw LINE2"
  echo "graph_info  Calculate the average power consumption for a compute unit over time period (y-x). Unit of result is uWatt. PwrCPUave = N * Jdelta * 1000 / (Ty - Tx). See https://www.kernel.org/doc/Documentation/hwmon/fam15h_power"
}
fetch_apupower() {
  _aputemp2="/usr/sbin/sensors"
  CPUP=0
  if [ -x "$_aputemp2" ]; then 
      CPUP=$($_aputemp2 -u | awk ' $1 == "power1_average:" { print $2 } ')
  fi
  echo "cpu_avg_power.value $CPUP"
}
